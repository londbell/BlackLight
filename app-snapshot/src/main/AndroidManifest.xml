<manifest
	package="us.shandian.blacklight.snapshot"
	android:installLocation="auto"
	xmlns:android="http://schemas.android.com/apk/res/android">
	
		<application
		android:name="info.papdt.blacklight.BLApplication"
		android:allowBackup="false">
		
		<activity
			android:label="@string/settings"
			android:name=".SettingsActivity"
			android:theme="@style/BL.Theme.Light.Translucent"
			android:windowSoftInputMode="adjustResize">
			<intent-filter>
				<category
					android:name="android.intent.category.DEFAULT"/>
				<action
					android:name="android.intent.action.MAIN"/>
			</intent-filter>
		</activity>

		<activity-alias
			android:label="@string/settings"
			android:name="info.papdt.blacklight.ui.settings.SettingsActivity"
			android:targetActivity=".SettingsActivity"
			android:theme="@style/BL.Theme.Light.Translucent"
			android:windowSoftInputMode="adjustResize">
			<intent-filter>
				<category
					android:name="android.intent.category.DEFAULT"/>
				<action
					android:name="android.intent.action.MAIN"/>
			</intent-filter>
		</activity-alias>
		
		</application>

</manifest>
